{
  "name": "chubby",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "npm run generate-types:ts && npm run build:content && npm run build:wasm && vite build",
    "build:wasm": "cd wasm && rm -f generated_types.go && ./build.sh && cp pathfinder.wasm wasm_exec.js ../public/ && echo \"WASM built at $(date)\"",
    "build:wasm:prod": "cd wasm && rm -f generated_types.go && ./build.sh prod && cp pathfinder.wasm wasm_exec.js ../public/ && echo \"Production WASM built at $(date)\"",
    "build:content": "node scripts/build-content.js",
    "generate-types": "npm run generate-types:ts && npm run generate-types:go",
    "generate-types:ts": "node scripts/generate-types.js",
    "generate-types:go": "go run scripts/generate-go-types.go",
    "test:e2e": "playwright test",
    "test:e2e:harness": "playwright test tests/e2e/test-harness-validation-cjs.spec.cjs tests/e2e/simulation-engine-validation.spec.cjs",
    "test:harness:validation": "node scripts/run-test-harness-validation.js",
    "test:critical": "node scripts/run-critical-tests.js",
    "preview": "vite preview",
    "test": "node scripts/test-memory-optimized.cjs",
    "test:legacy": "node --max-old-space-size=1536 --expose-gc ./node_modules/.bin/vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "node scripts/test-memory-optimized.cjs",
    "test:performance": "NODE_OPTIONS='--max-old-space-size=2048 --expose-gc' vitest run src/services/__tests__/dataService.performance.test.ts src/contracts/__tests__/PerformanceBenchmarks.test.ts",
    "test:memory-safe": "node scripts/test-memory-optimized.cjs",
    "validate": "npm run validate:accounts && npm run validate:logging && npm run validate:wasm-boundary",
    "validate:accounts": "npm test src/services/__tests__/accountMapping.test.ts",
    "validate:logging": "node scripts/validate-logging.js",
    "validate:wasm-boundary": "bash scripts/check-wasm-boundary.sh",
    "test:unit": "vitest run",
    "test:integration": "NODE_OPTIONS='--max-old-space-size=3072 --expose-gc' vitest run tests/integration",
    "test:deep-dive": "vitest run tests/integration/deepDiveAnalysis.test.ts",
    "test:simulation-debug": "vitest run src/utils/simulationDebugger.test.ts",
    "test:e2e:deep-dive": "playwright test deepDiveUserFlow",
    "test:e2e:dev": "NODE_ENV=development playwright test",
    "test:debug": "vitest --inspect-brk",
    "test:update": "vitest run --update-snapshots",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "tsc": "tsc --noEmit",
    "quality": "npm run lint && npm run tsc && npm run validate:logging && npm run test:ci",
    "pre-commit": "npm run quality",
    "analyze": "ANALYZE=true npm run build",
    "build:analyze": "npm run analyze",
    "build:size-check": "npm run build && du -h dist/assets/*.js | sort -hr",
    "build:with-warnings": "npm run build 2>&1 | grep -E '(warning|error|KB|MB)'",
    "chatgpt": "node apps/mcp-server/scripts/chatgpt-test.js",
    "chatgpt:tunnel": "node apps/mcp-server/scripts/chatgpt-test.js --tunnel",
    "chatgpt:go": "cd apps/mcp-server-go && ./scripts/chatgpt-tunnel.sh",
    "chatgpt:go:tunnel": "cd apps/mcp-server-go && ./scripts/chatgpt-tunnel.sh --tunnel"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@types/react-window": "^1.8.8",
    "ajv": "^8.17.1",
    "date-fns": "^4.1.0",
    "i18next": "^25.3.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "loglevel": "^1.9.2",
    "loglevel-plugin-prefix": "^0.8.4",
    "puppeteer": "^24.15.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.6.0",
    "react-router-dom": "^7.6.3",
    "react-window": "^2.2.3",
    "recharts": "^3.1.2",
    "yaml": "^2.8.1",
    "zod": "^4.1.13",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.28.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^22.14.0",
    "@types/prop-types": "^15.7.15",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/ui": "^3.2.3",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.3",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "fast-check": "^4.2.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "jsdom": "^26.1.0",
    "json-schema-to-typescript": "^15.0.4",
    "loglevel-plugin-remote": "^0.6.8",
    "postcss": "^8.5.6",
    "quicktype": "^23.2.6",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^3.4.17",
    "terser": "^5.43.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.33.1",
    "vite": "^6.4.1",
    "vite-bundle-analyzer": "^1.1.0",
    "vitest": "^3.2.3"
  }
}
