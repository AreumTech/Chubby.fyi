{
  "compilerOptions": {
    "target": "ESNext",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "types": [
      "node",
      "vitest/globals"
    ],
    /* Linting */
    "strict": true,
    //"noUnusedLocals": true,
    //"noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src",
    "tests",
    "wasm",
    "App.tsx",
    "benchmark.ts",
    "index.html",
    "index.tsx",
    "metadata.json",
    "vite.config.ts",
    "vitest.config.ts",
    "vitest.setup.ts",
    "__mocks__",
    "*.js",
    "*.ts",
    "*.tsx",
    "playwright.config.cjs",
    "public/wasmWorker.js",
    "scripts/generate-types.js"
  ],
  "exclude": [
    "node_modules"
  ]
}